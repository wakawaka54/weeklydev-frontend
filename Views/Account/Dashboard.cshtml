@model UserModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="col-md-8 center-col">
    <h2>Welcome to your dashboard</h2>
    @Context.User.Identity.Name
</div>
<br/>
<div class="col-md-8 center-col">
    <p>
        <span class="font-m">Teams</span>
        <a class="btn btn-success pull-right" asp-controller="Teams" asp-action="New" asp-route-returnurl="/dashboard">+</a>
    </p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Team Name</th>
                <th>Project</th>
                <th>Members</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Model.Teams)
            {
                <tr>
                    <td>
                        @team.Name
                    </td>
                    <td>
                        @if (team.Project != null)
                        {
                            @team.Project.Title
                        }
                    </td>
                    <td>
                        <p>Manager @Html.Partial("Partials/UserIcon", team.Manager)</p>
                        <p>Frontend @Html.Partial("Partials/UserIcon", team.Manager)</p>
                        <p>Backend @Html.Partial("Partials/UserIcon", team.Manager)</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="col-md-8 center-col">
    <h3>Projects</h3>
</div>