@using TestApp.Models.Api.Teams
@model NewTeamModel

<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Teams" asp-action="New" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <h4>Create a new team and invite other users!</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label">Team Name:</label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="IsActive" class="col-md-2 control-label">Public:</label>
                    <div class="col-md-10">
                        <textarea asp-for="IsActive" class="form-control"></textarea>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Create</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>