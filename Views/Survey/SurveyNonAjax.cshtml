@using TestApp.Models.Api
@model SurveyModel

<div class="row">
    <div class="col-md-8 center-col">
        <h2>@ViewData["Title"].</h2>
        <section>
            <form asp-controller="Survey" asp-action="Survey" method="post" class="form-horizontal">
                <h4>Complete the survey to begin getting matched to projects!</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Role" class="col-md-2 control-label">Select Perferred Role:</label>
                    <div class="col-md-10">
                        <select asp-for="Role" class="selectpicker" data-style="btn-default" multiple>
                            <option value="manager">Manager</option>
                            <option value="frontend">Frontend</option>
                            <option value="backend">Backend</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectManager" class="col-md-2 control-label">Would you like to be project manager?</label>
                    <div class="col-md-10">
                        <select asp-for="ProjectManager" class="form-control">
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                        <span asp-validation-for="ProjectManager" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="SkillLevel" class="col-md-2 control-label">Skill Level:</label>
                    <div class="col-md-10">
                        <select asp-for="SkillLevel" class="form-control">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                        <span asp-validation-for="SkillLevel" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectSize" class="col-md-2 control-label">Skill Level:</label>
                    <div class="col-md-10">
                        <select asp-for="ProjectSize" class="form-control">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                        <span asp-validation-for="ProjectSize" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Timezone" class="col-md-2 control-label">Skill Level:</label>
                    <div class="col-md-10">
                        <select asp-for="Timezone" class="form-control">
                            @for (int i = -12; i <= 12; i++)
                            {
                                <option value="@i">@i:00 GMT</option>
                            }
                        </select>
                        <span asp-validation-for="Timezone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Submit Survey</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>