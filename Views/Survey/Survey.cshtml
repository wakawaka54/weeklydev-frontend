@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using TestApp.Models.Api
@model SurveyModel

@{
    ViewData["Title"] = "Survey";

    //Check if ViewData contains ajax key and then if its true, remove the layout
    if(ViewData.ContainsKey("ajax") && (bool)ViewData["ajax"] == true)
    { Layout = null; }
}

@if (ViewData.ContainsKey("ajax") && (bool)ViewData["ajax"] == true)
{
    Html.RenderPartial("SurveyAjax", Model);
}
else
{
    Html.RenderPartial("SurveyNonAjax", Model);
}